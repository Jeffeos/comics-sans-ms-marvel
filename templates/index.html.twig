{% extends "base.html.twig" %}

    {% block pageTitle %}comics sans ms marvel{% endblock %}

    {% block body %}

        <div class="container">
            <div class="row justify-content-center">
                {% for character in characters %}
                    <div class="card col col-3 mx-3 my-3 p-0 position-relative">
                        <button onclick="addToFavourites({{ character.id }})" class="btn position-absolute p-0 m-1">
                            <svg id="{{ character.id }}" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                 fill="currentColor" class="bi bi-star-fill text-secondary" viewBox="0 0 16 16">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                            </svg>
                        </button>
                        <img class="card-img-top" src="{{ character.picture }}/standard_xlarge.jpg"
                             alt="{{ character.name }}'s picture">
                        <div class="card-body">
                            <a href="/character/{{ character.id }}"
                               class="btn btn-warning d-flex justify-content-center">{{ character.name }}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}

    {% block javascripts %}
        <script>
            let numberOfFavourites = 0;

            function addToFavourites(id) {
                    let iconId = document.getElementById(id);

                    if (!iconId.className.baseVal.match(/(^|\s+)favourite($|\s+)/g)) {
                        if (numberOfFavourites === 5) {
                            alert('You already selected 5 characters, please remove one before choosing a new character')
                        } else {
                            iconId.classList.remove("text-secondary");
                            iconId.classList.add("text-warning");
                            iconId.classList.add("favourite");
                            numberOfFavourites++;
                        }
                    } else if (iconId.className.baseVal.match(/(^|\s+)favourite($|\s+)/g)) {
                        iconId.classList.remove("text-warning");
                        iconId.classList.remove("favourite");
                        iconId.classList.add("text-secondary");
                        numberOfFavourites--;
                    }
            }
        </script>
    {% endblock %}
